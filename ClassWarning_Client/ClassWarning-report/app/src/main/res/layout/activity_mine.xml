<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:leon="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.MineActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/SHOWSELF"
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="个人中心"
                android:textAllCaps="false"
                android:textColor="@color/icons"
                android:textSize="36sp" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/MineScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/h_head"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            app:srcCompat="@drawable/avatar04" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/userID"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="sanenchen"
                                    android:textColor="#000000"
                                    android:textSize="24sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/TotalWarning"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center|center_horizontal|center_vertical"
                                    android:text="sanenchen"
                                    android:textColor="@color/design_default_color_primary_dark"
                                    android:textSize="14sp" />

                            </LinearLayout>
                        </LinearLayout>

                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <com.leon.lib.settingview.LSettingItem
                        android:id="@+id/SearchLike"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        leon:isShowUnderLine="false"
                        leon:leftText="模糊查询(下线维护中···)" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <com.leon.lib.settingview.LSettingItem
                        android:id="@+id/Setting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        leon:isShowUnderLine="false"
                        leon:leftIcon="@drawable/setting"
                        leon:leftText="设置" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </FrameLayout>

</LinearLayout>